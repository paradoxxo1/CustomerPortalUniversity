@model BOL.CommonEntities.StudentModule;


<div class="row">
    <div class="col-lg-6">        
        <h3>Student List</h3>
    </div>
    <div class="col-lg-6">
        <a href="@Url.Action("CreateStudent","Students")" class="btn btn-primary">Add New Student</a>
    </div>

</div>


<div class="row">
	<div class="col-lg-8">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Student ID</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Email</th>
                </tr>
            </thead>
            <tbody>
                @{
                    if(Model!=null && Model.studentsList!=null && Model.studentsList.Count()>0) 
                    {
                        foreach (var item in Model.studentsList)
                        {
                            <tr>
                                <th scope="row">@item.StudentID</th>
                                <td>@item.FirstName</td>
                                <td>@item.LastName</td>
                                <td>@item.Email</td>
                            </tr>
                        }
                    }
                }
            </tbody>
        </table>
	</div>
</div>
